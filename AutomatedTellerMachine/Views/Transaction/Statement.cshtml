@model IEnumerable<AutomatedTellerMachine.Models.Transaction>

@{
    ViewBag.Title = "Statement";
}

<h2>Statement</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CheckingAccount.AccountNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CheckingAccount.AccountNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
    </tr>
}
    <tr style="font-weight:700">
        <td style="text-align:right">
            Closing Balance
        </td>
        <td>
            @Html.DisplayFor(model => model.First().CheckingAccount.Balance)
        </td>
    </tr>
</table>
<div>
    @Html.ActionLink("Back to Menu", "Index")
</div>
